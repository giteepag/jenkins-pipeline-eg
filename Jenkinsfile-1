pipeline {
  agent {
    docker { 
    image 'aws-pip1' 
    args '-u root -v /home/prashant/.aws:/root/.aws:ro --network="host"'
    }
  }
  stages {
    stage('Build') {
      steps {
        sh 'aws --version'
        sh 'aws s3 ls'
        sh 'pip install -r requirements.txt'
      }
    }
    stage('Test'){
      steps {
        echo 'Test Stage executed'
      }
    }
    stage('Acceptance-Deploy') {
      steps {
      echo 'Acceptance Deploy executed'
      }
    }
  }
}
